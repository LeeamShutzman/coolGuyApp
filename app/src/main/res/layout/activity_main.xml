<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/chadDays"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="60sp"
        android:layout_marginStart="60sp"
        android:autoSizeMaxTextSize="400sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/copse"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="400sp"
        app:layout_constraintBottom_toTopOf="@id/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text" />


    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="21dp"
        android:fontFamily="@font/copse"
        android:text="Days since you started being cool:"
        android:textAlignment="center"
        android:textColor="@color/colorYellow"
        android:textSize="50sp"
        android:typeface="normal"
        app:layout_constrainedWidth="false"
        app:layout_constraintBottom_toTopOf="@+id/chadDays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

    <Button
        android:id="@+id/settings"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:background="@drawable/newsettings"
        tools:layout_editor_absoluteX="306sp"
        tools:layout_editor_absoluteY="666sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>